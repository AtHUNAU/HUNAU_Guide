{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "types": ["node"],
    "resolveJsonModule": true
  },
  "include": ["docs/.vitepress/**/*"],
  "exclude": ["node_modules", "dist"]
}
